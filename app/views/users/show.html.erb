<% provide(:title,@user.Name) %>

<%= render 'layouts/header' %>

<div class="row">
  <aside class ="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.Name %><br />
        <%= @user.Uid%>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
  	<% if @user.crs.any? %>
  		<h3>Case Record (<%= @user.crs.count %>)</h3>
  		<ol class="crs">
  			<%= render @crs %>
		</ol>
		<%= will_paginate @crs %>
	<% end %>
  </div>
</div>      